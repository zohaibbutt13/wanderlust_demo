<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h2 class="mb-4">Projects</h2>
    <%= button_to 'Create New Project', new_project_path, method: :get, class: 'btn btn-md btn-primary' %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text mb-2">
              <strong>Assigned to:</strong>
              <%= project.user&.full_name || "Unassigned" %>
            </p>
            <p class="card-text mb-2">
              <strong>Number of Videos:</strong>
              <%= project.videos.size %>
            </p>
            <p class="card-text mb-2">
              <strong>Status:</strong>
              <%= project.status.humanize %>
            </p>
            <p class="card-text text-muted">
              <small>Created on <%= project.created_at.strftime('%b %d, %Y') %></small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= will_paginate @projects %>
  </div>
</div>
